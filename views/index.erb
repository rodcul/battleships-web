<form action = '/ship' method = 'post'>
  <p>Place a ship (C1, B5...)
  <input type = 'text' name = 'coordinate'>
    <input type="radio" name="orientation" value="horizontally" checked>Horizontal
    <input type="radio" name="orientation" value="vertically">Vertical

    <input type = "submit" value = "Place a ship">
  </form>
<hr>
<form action = '/fire' method = 'post'>
  <p>Fire a shot (C1, B5...)
  <input type = 'text' name = 'coordinate'>
  <input type = "submit" value = "FIRE!">
  </form>
<hr>

  <pre> <%= @board %> </pre>
